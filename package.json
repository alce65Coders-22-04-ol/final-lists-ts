{
    "name": "trying-todo-ts",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@reduxjs/toolkit": "^1.8.3",
        "firebase": "^9.8.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.0.2",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.11.42",
        "@types/react": "^18.0.14",
        "@types/react-dom": "^18.0.5",
        "cypress": "^10.3.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-cypress": "^2.12.1",
        "typescript": "^4.7.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --watchAll --collect-coverage --testPathIgnorePatterns=spec",
        "test:all": "react-scripts test --watchAll --collect-coverage",
        "test:prod": "react-scripts test --watchAll --collect-coverage --testPathIgnorePatterns=spec --ci --silent --watchAll=false",
        "eject": "react-scripts eject",
        "e2e": "cypress open"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "prettier"
        ],
        "plugins": [
            "cypress"
        ],
        "env": {
            "cypress/globals": true
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "singleQuote": true
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "index.tsx",
            "reportWebVitals.js",
            "interfaces",
            "features/about/models",
            "features/home/models",
            "features/notes/models",
            "features/recipes/models",
            "features/tasks/models",
            "action.types",
            "spec"
        ]
    }
}
